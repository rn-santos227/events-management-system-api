extend type Query {
  roles(limit: Int): [Role!]!
  role(id: ID!): Role
}

extend type Mutation {
  updateRole(id: ID!, input: RoleUpdateInput!): Role!
}

type Role {
  id: ID!
  name: String
  privileges: [PrivilegeSummary!]!
  createdAt: String
  updatedAt: String
}

type RoleSummary {
  id: ID!
  name: String
}

input RoleUpdateInput {
  name: String
  privilegeIds: [ID!]
}
