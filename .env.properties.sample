# Copy this file to `.env.properties` and adjust values for your environment.
# The API reads these values on startup to connect to the database.

# Database connection configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=events_db
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Optional overrides
# Uncomment to provide a full JDBC URL instead of individual host/port/name values.
# DB_URL=jdbc:postgresql://localhost:5432/events_db
# Set to `false` to skip Flyway migrations (useful when the database is not yet ready).
FLYWAY_ENABLED=true
# Set to `validate` once the target database has the schema managed by Flyway.
HIBERNATE_DDL_AUTO=none
# Local profile overrides (used when running `./gradlew bootRun`)
# Uncomment to connect the `local` Spring profile to a different database, such as an
# in-memory H2 instance.
# LOCAL_DB_URL=jdbc:h2:mem:events_db;MODE=PostgreSQL;DATABASE_TO_LOWER=TRUE;CASE_INSENSITIVE_IDENTIFIERS=TRUE;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
# LOCAL_DB_USERNAME=sa
# LOCAL_DB_PASSWORD=
# LOCAL_DB_DRIVER=org.h2.Driver
# LOCAL_JPA_DIALECT=org.hibernate.dialect.H2Dialect
# LOCAL_HIBERNATE_DDL_AUTO=update
# Set to `true` if your local database is ready for Flyway migrations; defaults to `false`.
# LOCAL_FLYWAY_ENABLED=false

# Application key / JWT authentication configuration
# Run `./gradlew generateAppKey` to create a secure APP_KEY entry in `.env.properties`.
# The APP_KEY value will automatically be used as the JWT secret unless JWT_SECRET is set.
APP_KEY=
# Keep the secret value safe; rotate it to invalidate issued tokens.
JWT_SECRET=change-me
# Token expiration in milliseconds (1 hour by default).
JWT_EXPIRATION_MS=3600000

# Object storage configuration
# Enable to allow the application to store files in an S3-compatible provider.
STORAGE_ENABLED=false
# Supported providers: `s3` (AWS) or `minio`.
STORAGE_PROVIDER=s3
# The region for AWS S3; leave blank for MinIO unless it requires a region.
STORAGE_REGION=us-east-1
# The custom endpoint for MinIO or other S3-compatible services.
STORAGE_ENDPOINT=
# Access key and secret for the configured provider.
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
# Bucket where uploaded objects will be stored.
STORAGE_BUCKET=
# Set to `true` for providers requiring path-style access (e.g., MinIO without DNS).
STORAGE_PATH_STYLE=false
